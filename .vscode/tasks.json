{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Ozds.Web/Ozds.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Ozds.Web/Ozds.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Ozds.Web/Ozds.Web.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean_app_data",
            "command": "rm",
            "type": "process",
            "args": [
              "-rf",
              "${workspaceFolder}/App_Data"
            ]
        },
        {
            "label": "repl",
            "dependsOn": [
              "clean_app_data",
              "build"
            ]
        }
    ]
}