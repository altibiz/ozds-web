@using Ozds.Modules.Ozds
@using Ozds.Extensions

@model Site

<div class="d-flex flex-row justify-content-between">
  <span>
    <strong>
      @(T["Measurement interval (s)"])
    </strong>
    <span>
      @Model.MeasurementIntervalInSeconds.Value
    </span>
  </span>

  <span>
    <strong>
      @(T["Status"])
    </strong>
    <span>
      @(await Orchard
      .GetTaxonomyTermAsync<TagType>(Model.Status)
      .ThenWhenNonNullable(tag => tag.Title.Value.Title))
    </span>
  </span>
</div>