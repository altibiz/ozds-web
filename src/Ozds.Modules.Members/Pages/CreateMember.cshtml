@page

@using OrchardCore.ContentManagement
@using OrchardCore.ContentManagement.Metadata
@using OrchardCore.Mvc.Utilities

@model Ozds.Modules.Members.Pages.CreateMemberModel

@inject IContentDefinitionManager ContentDefinitionManager

@{ Html.RenderPartial("_Header", T["Create member"].Value); }

@await RenderSectionAsync("Messages", required: false)

<form method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger">
  </div>

	@await DisplayAsync(Model.Shape)

	<button
      type="submit"
      asp-page-handler="CreateMember"
      class="btn btn-success publish mt-2">
    @T["Create member"]
  </button>
</form>