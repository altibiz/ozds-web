@using Microsoft.Extensions.Options
@using OrchardCore.Admin

@inject IOptions<AdminOptions> AdminOptions

<link
    asp-src="~/Ozds.Themes.Ozds/assets/favicon.ico"
    type="image/x-icon"
    rel="shortcut icon" />

<a
    class="ta-navbar-brand"
    href='@Url.Content(
      $"~/{AdminOptions.Value.AdminUrlPrefix}")'>
  <img
      src='@(Url.Content(
        "~/Ozds.Themes.Ozds/assets/img/helb_logo/helb_logo_RGB.png"))'
      alt="@Site.SiteName" />
  <span>@Site.SiteName</span>
</a>
