@model OrchardCore.Users.ViewModels.RegisterViewModel

@{ ViewLayout = "Layout__Login"; }
@{ Html.RenderPartial("_Header", "Registracija"); }
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Registration" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-floating">
	<div class="form-group">
  <label asp-for="Email" class=" control-label">@T["Email"]</label>
  <div class="col-md-9">
  	<input asp-for="Email" id="emailInput" class="form-control" autofocus/>
  	<span asp-validation-for="Email" class="text-danger"></span>
  </div>
	</div>
	<input asp-for="UserName" id="nameInput"  type="hidden" />
	<div class="form-group">
  <label asp-for="Password" class="control-label">@T["Password"]</label>
  <div class="col-md-9">
  	<input asp-for="Password" class="form-control" />
  	<span asp-validation-for="Password" class="text-danger"></span>
  </div>
	</div>
	<div class="form-group">
  <label asp-for="ConfirmPassword" class=" control-label">@T["Confirm password"]</label>
  <div class="col-md-9">
  	<input asp-for="ConfirmPassword" class="form-control" />
  	<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
  </div>
	</div>
	@await RenderSectionAsync("AfterRegister", required: false)
	<div class="form-group">
  <div class="col-md-offset-3 col-md-9 mt-3">
  	<button type="submit" class="btn btn-primary">@T["Register"]</button>
  </div>
	</div>
</form>

<script asp-name="ozdstheme-jQuery" at="Foot"></script>
<script at="Foot" depends-on="ozdstheme-jQuery">
	$('#emailInput').blur(function () {
  $('#nameInput').val($(this).val().replace("@@","_"));
	});
</script>