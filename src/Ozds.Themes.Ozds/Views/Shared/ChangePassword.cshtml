@model OrchardCore.Users.ViewModels.ResetPasswordViewModel

@{ ViewLayout = "Layout__Login"; }

<partial name="Header" model='@T["Change password"].Value' />

<form
    asp-controller="ResetPassword"
    asp-action="ResetPassword"
    method="post"
    class="form-horizontal">
  <div asp-validation-summary="All" class="text-danger">
  </div>
  <div class="form-floating">
    <input
        asp-for="Email"
        class="form-control content-preview-text"
        autofocus tabindex="1"
        placeholder="smth" />
    <label asp-for="Email" class="col-md-3 control-label">
      @T["Email"]
    </label>
  </div>
  <div class="form-floating">
    <input
        asp-for="NewPassword"
        class="form-control content-preview-text"
        tabindex="2"
        placeholder="smth" />
    <label asp-for="NewPassword">
      @T["New password"]
    </label>
  </div>
  <div class="form-floating">
    <input
        asp-for="PasswordConfirmation"
        class="form-control content-preview-text"
        tabindex="3"
        placeholder="smth" />
    <label asp-for="PasswordConfirmation">
      @T["New password confirmation"]
    </label>
  </div>

  @await RenderSectionAsync("AfterResetPassword", required: false)

  <input asp-for="ResetToken" type="hidden" />

  <div class="form-floating mt-4">
    <button type="submit" class="btn btn-primary" tabindex="4">
      @T["Change password"]
    </button>
  </div>
</form>