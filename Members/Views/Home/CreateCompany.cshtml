@using OrchardCore.ContentManagement
@using OrchardCore.ContentManagement.Metadata
@using OrchardCore.Mvc.Utilities

@inject IContentDefinitionManager ContentDefinitionManager

@{ ContentItem contentItem = Model.ContentItem;
                var contentTypeDefinition = ContentDefinitionManager.GetTypeDefinition(contentItem.ContentType);
                var typeDisplayName = contentTypeDefinition?.DisplayName ?? contentItem.ContentType.CamelFriendly(); }


@{ Html.RenderPartial("_Header", typeDisplayName); }

<form asp-action="CreateCompany" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post" enctype="multipart/form-data">
    @Html.ValidationSummary()
    @await DisplayAsync(Model)
    <button type="submit" name="submit.Create" class="btn btn-success publish" value="submit.Create">Napravi </button>
</form>
