@page
@model Members.Pages.SignInModel

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@{
    var pageTitle = T[Model.Title];
}
@{ Html.RenderPartial("_Header", pageTitle.Value); }

<div class="container login-container">
    <div class="row">
        <div class="col-md-6">
            <h4>PRIJAVA</h4>
            <form action="/Members/SignIn" method="post" id="items-form" autocomplete="off" class="auth-form">

                <div class="form-floating">
                    <label for="email_address" class="">E-Mail Address</label>
                    <input type="text" id="UserName" name="UserName" class="form-control" required autofocus>
                </div>

                <div class="form-floating">
                    <label for="password" class="">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" required>
                </div>

                <div class="form-floating row">
                    <div class="">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="RememberMe" name="RememberMe" value="true"> Remember Me
                            </label>
                        </div>
                    </div>
                </div>

                <div class="orm-floating row">
                    <button type="submit" class="btn btn-primary">
                        Prijavite se
                    </button>
                    <a href="#" class="btn btn-link">
                        Forgot Your Password?
                    </a>
                </div>
                @Html.AntiForgeryToken()

            </form>

        </div>

        <div class="col-md-6">
            <div class="auth-form">
                <h4>REGISTRACIJA</h4>

                <div class="form-floating">
                    <p>Ukoliko još niste član, registrirajte se: </p>

                    <a href="/register" target="" class="btn btn-info">Registrirajte se</a>
                </div>

            </div>
        </div>


    </div>
</div>




        