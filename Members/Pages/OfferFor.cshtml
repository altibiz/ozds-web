@page
@model Members.Pages.OfferForModel
@{

}

@{ Html.RenderPartial("_Header", T["Offer For"].Value); }

@await RenderSectionAsync("Messages", required: false)

@if (Model.CompanyContentItems.Count > 0)
{
    @foreach (var item in Model.CompanyContentItems)
    {
        <a asp-page="./MyOffer" asp-route-contentItemId="@item.ContentItemId" class="list-group-item d-flex justify-content-between align-items-center">
            @item.DisplayText
            <span class="badge badge-primary badge-pill">14</span>
        </a>
    }
}
